<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/r_name"
            android:layout_width="75sp"
            android:layout_height="wrap_content"
            android:text="菜谱名:"
            />

        <EditText
            android:id="@+id/r_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入菜谱名"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/r_content"
            android:layout_width="75sp"
            android:layout_height="wrap_content"
            android:text="菜谱做法:"
            />

        <EditText
            android:id="@+id/r_content_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="5"
            android:gravity="top"
            android:hint="请输入菜谱做法以及原料"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/r_tag"
            android:layout_width="75sp"
            android:layout_height="wrap_content"
            android:text="TAG:"
            />

        <EditText
            android:id="@+id/r_tag_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TAG用逗号隔开，如“川菜,无辣不欢”"
            />

    </LinearLayout>

    <Button
        android:id="@+id/r_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上传菜谱"
        />

    <Button
        android:id="@+id/r_upload_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清空"
        />

</LinearLayout>